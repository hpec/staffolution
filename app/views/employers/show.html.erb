<%- model_class = Employer -%>
<div class="page-header">
  <h1><%=t '.title', :default => Employer %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_name) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_zipcode) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_zipcode %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_phone) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_url) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_email) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_street_number) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_street_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_street) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_street %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_unit_number) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_unit_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_city) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_state) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employer_office_type) %></dt>
      <dd><pre class="prettyprint"><%= @employer.employer_office_type %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employer_path(@employer), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employer_path(@employer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

