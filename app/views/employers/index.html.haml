- model_class = Employer
.page-header
  %h1= t '.title', :default => Employer
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:employer_name)
      %th= model_class.human_attribute_name(:employer_zipcode)
      %th= model_class.human_attribute_name(:employer_phone)
      %th= model_class.human_attribute_name(:employer_url)
      %th= model_class.human_attribute_name(:employer_email)
      %th= model_class.human_attribute_name(:employer_street_number)
      %th= model_class.human_attribute_name(:employer_street)
      %th= model_class.human_attribute_name(:employer_unit_number)
      %th= model_class.human_attribute_name(:employer_city)
      %th= model_class.human_attribute_name(:employer_state)
      %th= model_class.human_attribute_name(:employer_office_type)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @employers.each do |employer|
      %tr
        %td= employer.id
        %td= employer.employer_name
        %td= employer.employer_zipcode
        %td= employer.employer_phone
        %td= employer.employer_url
        %td= employer.employer_email
        %td= employer.employer_street_number
        %td= employer.employer_street
        %td= employer.employer_unit_number
        %td= employer.employer_city
        %td= employer.employer_state
        %td= employer.employer_office_type
        %td= l employer.created_at, format: :long
        %td
          = link_to employer_path(employer), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to employer_path(employer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_employer_path,                                     |
  :class => 'btn btn-primary'                            |
