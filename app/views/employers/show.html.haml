- model_class = Employer
.page-header
  %h1= t '.title', :default => Employer
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @employer.name
    %dt.label.label-default= model_class.human_attribute_name(:zipcode)
    %dd
      %pre.prettyprint= @employer.zipcode
    %dt.label.label-default= model_class.human_attribute_name(:phone)
    %dd
      %pre.prettyprint= @employer.phone
    %dt.label.label-default= model_class.human_attribute_name(:website)
    %dd
      %pre.prettyprint= @employer.website
    %dt.label.label-default= model_class.human_attribute_name(:email)
    %dd
      %pre.prettyprint= @employer.email
    %dt.label.label-default= model_class.human_attribute_name(:address_line_1)
    %dd
      %pre.prettyprint= @employer.address_line_1
    %dt.label.label-default= model_class.human_attribute_name(:address_line_2)
    %dd
      %pre.prettyprint= @employer.address_line_2
    %dt.label.label-default= model_class.human_attribute_name(:city)
    %dd
      %pre.prettyprint= @employer.city
    %dt.label.label-default= model_class.human_attribute_name(:state)
    %dd
      %pre.prettyprint= @employer.state
    %dt.label.label-default= model_class.human_attribute_name(:office_type)

.form-group
  = link_to t('.edit', :default => t("helpers.links.edit")),   |
    edit_employer_path(@employer), :class => 'btn btn-default'                                                                                 |
