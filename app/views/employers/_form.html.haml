= form_for @employer do |f|
  - if @employer.errors.any?
    #error_explanation
      .alert.alert-danger
        %ul
        - @employer.errors.full_messages.each do |msg|
          %li
            = msg
  .row
    .large-12.columns
      %fieldset
        %legend Basic Info
        = f.label :company_name
        = f.text_field :name

        = f.label :phone
        = f.text_field :phone

        = f.label :website
        = f.text_field :website

        = f.label :email
        = f.email_field :email

  .row
    .large-12.columns
      %fieldset
        %legend Address
        = f.label :address_line_1
        = f.text_field :address_line_1

        = f.label :address_line_2
        = f.text_field :address_line_2

        .row
          .large-4.columns
            = f.label :city
            = f.text_field :city
          .large-4.columns
            = f.label :state
            = f.text_field :state
          .large-2.columns
            = f.label :zipcode
            = f.text_field :zipcode

        .row
          .large-12.columns
            = f.label :office_type
            = f.text_area :office_type

  .row
    .large-12.columns
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        employers_path, :class => 'btn btn-default'                  |
