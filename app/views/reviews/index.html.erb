<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Review rating</th>
      <th>User</th>
      <th>Review description</th>
      <th>Review employee recommendation</th>
      <th>Employer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.employee %></td>
        <td><%= review.review_rating %></td>
        <td><%= review.user %></td>
        <td><%= review.review_description %></td>
        <td><%= review.review_employee_recommendation %></td>
        <td><%= review.employer %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

