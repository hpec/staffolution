- model_class = Job
.page-header
  %h1= t '.title', :default => Job
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:job_position)
    %dd
      %pre.prettyprint= @job.job_position
    %dt.label.label-default= model_class.human_attribute_name(:job_description)
    %dd
      %pre.prettyprint= @job.job_description
    %dt.label.label-default= model_class.human_attribute_name(:job_start_date)
    %dd
      %pre.prettyprint= @job.job_start_date
    %dt.label.label-default= model_class.human_attribute_name(:job_end_date)
    %dd
      %pre.prettyprint= @job.job_end_date
    %dt.label.label-default= model_class.human_attribute_name(:job_compensation)
    %dd
      %pre.prettyprint= @job.job_compensation
    %dt.label.label-default= model_class.human_attribute_name(:job_start_time)
    %dd
      %pre.prettyprint= @job.job_start_time
    %dt.label.label-default= model_class.human_attribute_name(:job_end_time)
    %dd
      %pre.prettyprint= @job.job_end_time
    %dt.label.label-default= model_class.human_attribute_name(:job_filled)
    %dd
      %pre.prettyprint= @job.job_filled
    %dt.label.label-default= model_class.human_attribute_name(:job_title)
    %dd
      %pre.prettyprint= @job.job_title
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    jobs_path, :class => 'btn btn-default'                   |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_job_path(@job), :class => 'btn btn-default'         |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    job_path(@job),                                                                                              |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
