<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => Job %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:job_position) %></th>
      <th><%= model_class.human_attribute_name(:job_description) %></th>
      <th><%= model_class.human_attribute_name(:job_start_date) %></th>
      <th><%= model_class.human_attribute_name(:job_end_date) %></th>
      <th><%= model_class.human_attribute_name(:job_compensation) %></th>
      <th><%= model_class.human_attribute_name(:job_start_time) %></th>
      <th><%= model_class.human_attribute_name(:job_end_time) %></th>
      <th><%= model_class.human_attribute_name(:job_filled) %></th>
      <th><%= model_class.human_attribute_name(:job_title) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.job_position %></td>
        <td><%= job.job_description %></td>
        <td><%= job.job_start_date %></td>
        <td><%= job.job_end_date %></td>
        <td><%= job.job_compensation %></td>
        <td><%= job.job_start_time %></td>
        <td><%= job.job_end_time %></td>
        <td><%= job.job_filled %></td>
        <td><%= job.job_title %></td>
        <td><%=l job.created_at, format: :long %></td>
        <td>
          <%= link_to job_path(job), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to job_path(job), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_job_path,
            :class => 'btn btn-primary' %>
