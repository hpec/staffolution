= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend.fieldset-title Basics

    = f.label :name
    = f.text_field :name

    = f.label :description
    = f.text_area :description

    =f.hidden_field :employer_id, :value=>@job.employer.id

    = f.label :compensation
    = f.text_field :compensation

    = f.label :position
    = f.text_field :position

  = render partial: "addresses/address_fields", locals: {f: f}

  .actions
    = f.submit 'Post', :class => 'btn btn-primary'
