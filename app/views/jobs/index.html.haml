%h1 Listing jobs

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Employer
      %th Employee
      %th Address line 1
      %th Address line 2
      %th City
      %th State
      %th Zipcode
      %th Compensation
      %th Position
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.name
        %td= job.description
        %td= job.employer
        %td= job.employee
        %td= job.address_line_1
        %td= job.address_line_2
        %td= job.city
        %td= job.state
        %td= job.zipcode
        %td= job.compensation
        %td= job.position
        %td= link_to 'Show', job
        %td= link_to 'Edit', edit_job_path(job)
        %td= link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Job', new_job_path
