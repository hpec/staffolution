- model_class = EducationClass
.page-header
  %h1= t '.title', :default => EducationClass
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:class_name)
    %dd
      %pre.prettyprint= @education_class.class_name
    %dt.label.label-default= model_class.human_attribute_name(:class_type)
    %dd
      %pre.prettyprint= @education_class.class_type
    %dt.label.label-default= model_class.human_attribute_name(:class_keywords)
    %dd
      %pre.prettyprint= @education_class.class_keywords
    %dt.label.label-default= model_class.human_attribute_name(:class_date_start)
    %dd
      %pre.prettyprint= @education_class.class_date_start
    %dt.label.label-default= model_class.human_attribute_name(:class_date_end)
    %dd
      %pre.prettyprint= @education_class.class_date_end
    %dt.label.label-default= model_class.human_attribute_name(:class_time_start)
    %dd
      %pre.prettyprint= @education_class.class_time_start
    %dt.label.label-default= model_class.human_attribute_name(:class_time_end)
    %dd
      %pre.prettyprint= @education_class.class_time_end
    %dt.label.label-default= model_class.human_attribute_name(:class_worth)
    %dd
      %pre.prettyprint= @education_class.class_worth
    %dt.label.label-default= model_class.human_attribute_name(:class_category)
    %dd
      %pre.prettyprint= @education_class.class_category
    %dt.label.label-default= model_class.human_attribute_name(:class_url)
    %dd
      %pre.prettyprint= @education_class.class_url
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    education_classes_path, :class => 'btn btn-default'      |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),                 |
    edit_education_class_path(@education_class), :class => 'btn btn-default' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    education_class_path(@education_class),                                                                      |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
