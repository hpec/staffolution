- model_class = Employee
.page-header
  %h1= t '.title', :default => Employee
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:email)
    %dd
      %pre.prettyprint= @employee.email
    %dt.label.label-default= model_class.human_attribute_name(:phone)
    %dd
      %pre.prettyprint= @employee.phone
    %dt.label.label-default= model_class.human_attribute_name(:zipcode)
    %dd
      %pre.prettyprint= @employee.zipcode
    %dt.label.label-default= model_class.human_attribute_name(:first_name)
    %dd
      %pre.prettyprint= @employee.first_name
    %dt.label.label-default= model_class.human_attribute_name(:last_name)
    %dd
      %pre.prettyprint= @employee.last_name
    %dt.label.label-default= model_class.human_attribute_name(:certifications)
    %dd
      %pre.prettyprint= @employee.certifications
    %dt.label.label-default= model_class.human_attribute_name(:days_available)
    %dd
      %pre.prettyprint= @employee.days_available
    %dt.label.label-default= model_class.human_attribute_name(:has_transportation)
    %dd
      %pre.prettyprint= @employee.has_transportation
    %dt.label.label-default= model_class.human_attribute_name(:industry)
    %dd
      %pre.prettyprint= @employee.industry
    %dt.label.label-default= model_class.human_attribute_name(:school)
    %dd
      %pre.prettyprint= @employee.school
    %dt.label.label-default= model_class.human_attribute_name(:degree)
    %dd
      %pre.prettyprint= @employee.degree
    %dt.label.label-default= model_class.human_attribute_name(:years_of_experience)
    %dd
      %pre.prettyprint= @employee.years_of_experience
    %dt.label.label-default= model_class.human_attribute_name(:pay_per_hour)
    %dd
      %pre.prettyprint= @employee.pay_per_hour
    %dt.label.label-default= model_class.human_attribute_name(:bio)
    %dd
      %pre.prettyprint= @employee.bio
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    employees_path, :class => 'btn btn-default'              |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),   |
    edit_employee_path(@employee), :class => 'btn btn-default' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    employee_path(@employee),                                                                                    |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
