    = f.label :employee_phone, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :employee_phone, :class => 'text-field form-control'
  .form-group
    = f.label :employee_zipcode, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :employee_zipcode, :class => 'text-field form-control'
