      = f.text_field :employee_bages, :class => 'text-field form-control'
  .form-group
    = f.label :employee_description, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :employee_description, :class => 'text-field form-control'
  .form-group
    = f.label :employee_experience_years, :class => 'control-label col-md-2'
