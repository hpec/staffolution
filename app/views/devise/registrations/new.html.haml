.page-header
  %h1= t ".title", default: "Sign Up"
= devise_error_messages!
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-user"}) do |f|
  .form-group
    = f.label :username
    = f.text_field :username, html: {spellcheck: "false"}
  .form-group
    = f.label :email
    = f.email_field :email, html: {spellcheck: "false"}
  .form-group
    = f.label :password
    = f.password_field :password, html: {autocomplete: "off"}
  .form-group
    = f.label :password_confirmation, "Password Confirmation"
    = f.password_field :password_confirmation, html: {autocomplete: "off"}
  .form-group
    = f.radio_button :is_employer, '0', :checked => params[:employee] == '1' || (params[:user] and params[:user][:is_employer] == '0')
    = f.label :is_employer, "I want to find a job", :value => '0'
    = f.radio_button :is_employer, '1', :checked => params[:employer] == '1' || (params[:user] and params[:user][:is_employer] == '1')
    = f.label :is_employer, "I want to post a job", :value => '1'
  .form-group
    = f.submit "Sign Up", class: "btn btn-primary"
  .form-group
    = render "devise/shared/links"
