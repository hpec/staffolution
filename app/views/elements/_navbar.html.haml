%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if user_signed_in?
        %a.navbar-brand.page-scroll{:href => "#"} Staffolution
      - else
        %a.navbar-brand.page-scroll{:href => "/"} Staffolution
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Welcome, #{current_user.username}", "#"
          %li= link_to "Dashboard", dashboard_path
          / %li= link_to "Edit Account", edit_user_registration_path
          %li= link_to "My Profile", current_user.profile_path
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign Up", new_user_registration_path
          %li= link_to "Login", new_user_session_path
